<body onload="pageLoaded()">
    <div class="container">


        <h2 class="center">書本搜尋</h2>
        <label>類型:</label>
        <form action="/book/adminbookresult" method="GET">
            <div class="form-group">
                <input type="text" class="form-control" name="category" list="optionlist">
                <datalist id="optionlist">
                    <option value="成長系列">成長系列</option>
                    <option value="哀傷">哀傷</option>
                    <option value="家庭關係">家庭關係</option>
                    <option value="情緒教育">情緒教育</option>
                </datalist>
                <!-- <select name="category" class="form-control">
                    <option value=""></option>
                    <option value="成長系列">成長系列</option>
                    <option value="哀傷">哀傷</option>
                    <option value="家庭關係">家庭關係</option>
                    <option value="情緒教育">情緒教育</option>
                </select> -->
            </div>
            <div class="form-group">
                <label>編號:</label>
                <input type="string" class="form-control" name="no">
            </div>
            <div class="form-group">
                <label>書名:</label>
                <input type="string" class="form-control" name="bookname">
            </div>
            <div class="form-group">
                <label>作者:</label>
                <input type="string" class="form-control" name="author">
            </div>
            <div class="form-group">
                <label>出版社:</label>
                <input type="string" class="form-control" name="publisher">
            </div>
            <!-- <div class="form-group">
                <label>ISBN:</label>
                <input type="string" class="form-control" name="ISBN">
            </div> -->
            <button type="sumbit" class="btn btn-primary center">確認搜尋</button>
            <br>
        </form>

        <div class="row">
            <% book.forEach(function(model) { %>
            <div class="card col-xl-6 col-sm-12">
                <!-- <div id="title">
                    <a href="/book/adminbookdetail/<%=model.id%>">詳細資料頁面 </a>
                </div> -->
                <a href="/book/adminbookdetail/<%=model.id%>" style="color:darkslategrey">

                    <p></p>
                    <div id="info">
                        <img src=<%=model.avatar %> id="photo" width="150" height="150">
                        <ul class="list-group">
                            <li class="list-group-item" id="info">
                                <span id="briefinfo">編號:</span>
                                <%= model.no %>
                            </li>

                            <li class="list-group-item" id="info">
                                <span id="briefinfo">書名:</span>
                                <%= model.bookname %>
                            </li>

                            <li class="list-group-item" id="info">
                                <span id="briefinfo">作者/機構:</span>
                                <%= model.author %>
                            </li>


                        </ul>
                    </div>
                </a>
                <p></p>
            </div>
            <% }); %>

        </div>

        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>


    </div>
</body>

