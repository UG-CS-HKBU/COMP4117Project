<body onload="pageLoaded()">
    <div class="container">
        <h2 class="center">書本搜尋結果</h2>

        <div class="row">
            <% book.forEach(function(model) { %>
                <div class="card col-xl-6 col-sm-12">
                    <a href="/book/vistorbookdetail/<%=model.id%>" style="color:darkslategrey">
                        <p></p>
                        <div id="info">
                            <img src=<%=model.avatar %> id="photo" width="150" height="150">
                            <ul class="list-group">
                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">編號:</span>
                                    <%= model.no %>
                                </li>
                                
                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">書名:</span>
                                    <%= model.bookname %>
                                </li>

                                <li class="list-group-item" id="info">
                                    <span id="briefinfo">作者/機構:</span>
                                    <%= model.author %>
                                </li>


                            </ul>
                        </div>
                    </a>
                    <p></p>

                </div>
                <% }); %>

        </div>

    </div>
    <nav class="bottomnav fixed-bottom">
        <a href="/" class="nav__link">
            <i class="material-icons">
                home
            </i>
            <span class="nav__text">主頁</span>
        </a>
        <a href="/item/vistorsearch" class="nav__link nav__link--active">
            <i class="material-icons">
                search
            </i>
            <span class="nav__text">搜尋</span>
        </a>
        <a href="/item/vistornotlogin" class="nav__link">
            <i class="material-icons">
                email
            </i>
            <span class="nav__text">通知</span>
        </a>
        <a href="/item/vistornotlogin" class="nav__link">
            <i class="material-icons">
                account_circle
            </i>
            <span class="nav__text">帳戶</span>
        </a>
    </nav>


    </div>
</body>