<script>

    async function deleteBook(id) {

        var r = confirm("確認刪除?");

        if (r) {

            var response = await fetch("/book/adminbookdelete/" + id, {
                method: "POST",
                credentials: 'same-origin',
            });

            if (response.ok) {
                var data = await response.json();
                alert(data.message);
                window.location = data.url;
            } else {
                alert(response.status + ": " + response.statusText);
            }

        } else {
            alert("取消");
        }

    };

</script>