<body onload="pageLoaded()">
    <div class="container">
        <h4 class="center">增加禮物</h4>

        <form action="/item/adminaddgift" method="POST">
            <div class="form-group row">
                <div class="col-xl-6 col-form-label">
                    <label>禮物種類:</label>
                    <input type="text" class="form-control" name="Gift[category]" list="optionlist" required>
                    <datalist id="optionlist">
                        <option value="小型禮物">小型禮物</option>
                        <option value="中型禮物">中型禮物</option>
                        <option value="大型禮物">大型禮物</option>
                    </datalist>
                    <!--<select name="Gift[category]" class="form-control">
                        <option value="">選擇禮物種類</option>
                        <option value="小型禮物">小型禮物</option>
                        <option value="中型禮物">中型禮物</option>
                        <option value="大型禮物">大型禮物</option>
                    </select>-->
                </div>
                <div class="col-xl-6 col-form-label">
                    <label>禮物名稱:</label>
                    <input type="text" class="form-control" name="Gift[giftname]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>數量:</label>
                    <input type="number" class="form-control" name="Gift[amount]]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>單價價值(HKD):</label>
                    <input type="number" class="form-control" name="Gift[value]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>捐贈者:</label>
                    <input type="text" class="form-control" name="Gift[donator]" >
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>位置:</label>
                    <input type="text" class="form-control" name="Gift[location]]" required>
                </div>

                <button type="submit" class="btn btn-primary center">增加</button>
            </div>

        </form>

        <form action="/gift/import_xlsx" method="GET">
            <button class="btn btn-dark center">上傳Excel</button>
        </form>

        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>

    </div>
</body>