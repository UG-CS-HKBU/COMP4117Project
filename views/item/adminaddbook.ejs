<body onload="pageLoaded()">
    <div class="container">
        <h4 class="center">增加書本</h4>

        <form action="/item/adminaddbook" method="POST">
            <div class="form-group row">
                <div class="col-xl-6 col-form-label">
                    <label>書本種類:</label>
                    <input type="text" class="form-control" name="Book[category]" list="optionlist" required>
                    <datalist id="optionlist">
                        <option value="成長系列">成長系列</option>
                        <option value="哀傷">哀傷</option>
                        <option value="家庭關係">家庭關係</option>
                        <option value="情緒教育">情緒教育</option>
                    </datalist>
                    <!--<select name="Book[category]" class="form-control">
                        <option value="成長系列">成長系列</option>
                        <option value="哀傷">哀傷</option>
                        <option value="家庭關係">家庭關係</option>
                        <option value="情緒教育">情緒教育</option>
                    </select>-->
                </div>
                <div class="col-xl-6 col-form-label">
                    <label>編號:</label>
                    <input type="text" class="form-control" name="Book[no]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>書名:</label>
                    <input type="text" class="form-control" name="Book[bookname]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>作者:</label>
                    <input type="text" class="form-control" name="Book[author]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版社:</label>
                    <input type="text" class="form-control" name="Book[publisher]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版年份:</label>
                    <input type="number" class="form-control" name="Book[year]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>ISBN:</label>
                    <input type="number" class="form-control" name="Book[ISBN]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>位置:</label>
                    <input type="text" class="form-control" name="Book[location]]" required>
                </div>


                <button type="submit" class="btn btn-primary center">增加</button>
            </div>

        </form>



        <form action="/book/import_xlsx" method="GET">
            <button class="btn btn-dark center">上傳Excel</button>
        </form>

        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>

    </div>
</body>