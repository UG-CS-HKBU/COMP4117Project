<body onload="pageLoaded()">
    <br>

    <img src="https://cubc.org.hk/wp-content/uploads/2016/08/logo_retina_x2.png" class="center">

    <br>
    <br>
    <div class="container">
        <h2 class="center">更改帳戶資料</h2>

        <form action="/item/useraccountupdate/<%=user.id%>" method="POST">
            <div class="col-xl-6 col-form-label">
                <label>用戶名稱:</label>
                <input type="text" class="form-control" name="username" value="<%=user.username%>" required>
            </div>

            <div class="form-group col-12 col-xl-6">
                <label>電郵地址:</label>
                <input type="email" col-xl-3 class="form-control" name="email" value="<%=user.email%>" required>
            </div>


            <div class="form-group col-12 col-xl-6 ">
                <label>部門:</label>
                <br>
                <select name="department" required class=" col-12 col-xl-12" style="height: 37px;">
                    <option value="部門A">部門A</option>
                    <option value="部門B">部門B</option>
                    <option value="部門C">部門C</option>
                </select>
            </div>

            <div class="form-group col-12 col-xl-6 ">
                <label>職位:</label>
                <br>
                <select name="position" required class=" col-12 col-xl-12" style="height: 37px;">
                    <option value="職位A">職位A</option>
                    <option value="職位B">職位B</option>
                    <option value="職位C">職位C</option>
                </select>


            </div>
            <button type="submit" class="btn btn-primary center">更改</button>
    </div>

    </form>


    <nav class="bottomnav fixed-bottom">
        <a href="/item/userindex" class="nav__link">
            <i class="material-icons">
                home
            </i>
            <span class="nav__text">主頁</span>
        </a>
        <a href="/item/usersearch" class="nav__link nav__link--active">
            <i class="material-icons">
                search
            </i>
            <span class="nav__text">搜尋</span>
        </a>
        <a href="/item/usernoti" class="nav__link">
            <i class="material-icons">
                email
            </i>
            <span class="nav__text">通知</span>
        </a>
        <a href="/item/useraccount" class="nav__link">
            <i class="material-icons">
                account_circle
            </i>
            <span class="nav__text">帳戶</span>
        </a>
    </nav>
    </div>

    </div>
</body>

<script>
    var a = document.querySelector('option[value="<%=user.department%>"]');
    a.selected = "selected";


    var b = document.querySelector('option[value="<%=user.position%>"]');
    b.selected = "selected";
</script>