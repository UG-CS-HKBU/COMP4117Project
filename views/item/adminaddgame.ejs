<body onload="pageLoaded()">
    <div class="container">
        <h4 class="center">增加桌遊</h4>

        <form action="/item/adminaddgame" method="POST">
            <div class="form-group row">
                <div class="col-xl-6 col-form-label">
                    <label>桌遊種類:</label>
                    <input type="text" class="form-control" name="Game[category]" list="optionlist" required>
                    <datalist id="optionlist">
                        <option value="棋類遊戲">棋類遊戲</option>
                        <option value="卡牌遊戲">卡牌遊戲</option>
                        <option value="骰子遊戲">骰子遊戲</option>
                        <option value="紙筆遊戲">紙筆遊戲</option>
                    </datalist>
                    <!--<select name="Game[category]" class="form-control">
                        <option value="">選擇桌遊種類</option>
                        <option value="棋類遊戲">棋類遊戲</option>
                        <option value="卡牌遊戲">卡牌遊戲</option>
                        <option value="骰子遊戲">骰子遊戲</option>
                        <option value="紙筆遊戲">紙筆遊戲</option>
                    </select>-->
                </div>
                <div class="col-xl-6 col-form-label">
                    <label>桌遊名稱:</label>
                    <input type="text" class="form-control" name="Game[gamename]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>出版社:</label>
                    <input type="text" class="form-control" name="Game[publisher]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>編號:</label>
                    <input type="number" class="form-control" name="Game[serialno]]" required>
                </div>

                <div class="col-xl-6 col-form-label">
                    <label>位置:</label>
                    <input type="text" class="form-control" name="Game[location]]" required>
                </div>

                <button type="submit" class="btn btn-primary center">增加</button>
            </div>

        </form>

        <form action="/game/import_xlsx" method="GET">
            <button class="btn btn-dark center">上傳Excel</button>
        </form>

        <nav class="bottomnav fixed-bottom">
            <a href="/item/adminindex" class="nav__link">
                <i class="material-icons">
                    home
                </i>
                <span class="nav__text">主頁</span>
            </a>
            <a href="/item/adminsearch" class="nav__link nav__link--active">
                <i class="material-icons">
                    search
                </i>
                <span class="nav__text">搜尋</span>
            </a>
            <a href="/item/adminnoti" class="nav__link">
                <i class="material-icons">
                    email
                </i>
                <span class="nav__text">通知</span>
            </a>
            <a href="/item/adminaccount" class="nav__link">
                <i class="material-icons">
                    account_circle
                </i>
                <span class="nav__text">帳戶</span>
            </a>
        </nav>
    </div>

    </div>
</body>